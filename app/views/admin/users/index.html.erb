<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div>
  <%= search_form_for @q, url: admin_users_path, class: "input-group" do |f| %>
    <span class="input-group-prepend" class="left">
      <%= f.button "", class: "btn btn-primary" do %>
        <svg class="c-icon h14 w20">
          <use xlink:href="/assets/admin/coreui/free-symbol-defs.svg#cui-magnifying-glass"></use>
        </svg> <%= t ".search" %>
      <% end %>
    </span>
    <%= f.search_field :full_name_or_email_or_phone_cont, type: "", class: "wid30 left mar0", id: "input1-group2" %>
  <% end %>
</div>
<hr class="mt-0">
<table class = "table table-responsive-sm table-hover table-outline mb-0">
  <thead class="thead-light">
    <tr>
      <th class = "text-center"></th>
      <th class = "text-center"><%= sort_link @q, :email, t(".email"), default_order: :esc %></th>
      <th class = "text-center"><%= sort_link @q, :full_name,
        %i(full_name email), default_order: {full_name: 'asc', email: 'desc'} %></th>
      <th class = "text-center"><%= sort_link @q, :gender, t(".gender") %></th>
      <th class = "text-center"><%= sort_link @q, :phone, t(".phone") %></th>
      <th class = "text-center"><%= sort_link @q, :confirmed_at, t(".activated_at") %></th>
      <th class = "text-center"></th>
    </tr>
  </thead>
  <tbody>
    <%= render @users %>
  </tbody>
</table>
<hr class="mt-0">
<%= will_paginate @users %>
