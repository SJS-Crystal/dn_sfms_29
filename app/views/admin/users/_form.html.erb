<%= form_for @user, url: admin_update_user_path(@user) do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :full_name, class: "form-control", disabled: true %>

  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control", disabled: true%>

  <%= f.label :wallet %>
  <%= f.number_field :wallet, class: "form-control" %>
  <br>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
