<% provide :title, t(".edit_user") %>

<section class="banner-area relative">
  <div class="overlay overlay-bg"></div>
  <div class="container user">
    <div class="row fullscreen align-items-center justify-content-between
      p-top-150px edit_profile">
      <div class="col-md-3">
        <div class="avatar_edit">
          <%= image_tag @user.avatar.variant(resize_to_limit:
            Settings.size_avatar),
            class: "size_avatar gravatar" if @user.avatar&.attached? %>
        </div>
      </div>
      <div class="col-md-6">
        <h1><%= t ".update_your_profile" %></h1>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "shared/error_messages", object: f.object %>
        
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          </div>
        
          <div class="field">
            <%= f.label :full_name %><br />
            <%= f.text_field :full_name, autocomplete: "full_name", class: "form-control" %>
          </div>
        
          <div class="field">
            <%= f.label :phone %><br />
            <%= f.text_field :phone, autocomplete: "phone", class: "form-control" %>
          </div>

          <div class="field">
            <div class="form-check-inline">
              <%= f.label :gender, class: "form-check-label" do %>
                <%= f.label :male %>
                <%= f.radio_button :gender, 1, checked: @user.gender, class: "form-check-input" %>
              <% end %>
            </div>
            <div class="form-check-inline">
              <%= f.label :gender, class: "form-check-label" do %>
                <%= f.label :female %>
                <%= f.radio_button :gender, 0, checked: !@user.gender, class: "form-check-input" %>
              <% end %>
            </div>
          </div>

          <br>
        
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="alert alert-warning">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
        
          <div class="field">
            <%= f.label :password %> <em><%= t ".password note" %></em><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= t ".length password note", count: @minimum_password_length %></em>
            <% end %>
          </div>
        
          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        
          <div class="field">
            <%= f.label :current_password %> <em><%= t ".current password" %></em><br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
          </div>
        
          <div class="actions">
            <%= f.submit class: "btn btn-primary" %>
          </div>
        <% end %>
        
        <h3><%= t ".cancel my account" %></h3>
        
        <p><%= t(".unhappy") %> <%= button_to t(".cancel my account"), registration_path(resource_name), data: { confirm: t(".confirm") }, method: :delete, class: "btn btn-primary" %></p>
        
        <%= link_to t(".back"), :back %>
      </div>
      <div calss="col-md-3"></div>
    </div>
  </div>
</section>
