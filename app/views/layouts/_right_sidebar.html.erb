<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="flight" role="tabpanel" aria-labelledby="flight-tab">
    <%= search_form_for @q, url: root_path, remote: true, html: {class: "form-wrap"} do |f| %>
      <%= f.label :name %>
      <%= f.search_field :name_cont, class: "form-control" %>
      <%= f.label :city %>
      <%= f.search_field :city_cont, class: "form-control" %>
      <%= f.label :district %>
      <%= f.search_field :district_cont, class: "form-control" %>
      <%= f.label :address %>
      <%= f.search_field :address_cont, class: "form-control" %>

      <%= f.label :start_time, class: "font-starttime" %>
      <div class="start_time">
        <%= f.search_field :start_time_gteq, class: "form-control", type: "time" %>
      </div>
      <div class="clear"></div>
      <%= f.label :end_time, class: "font-endtime" %>
      <div class="end_time">
        <%= f.search_field :end_time_lteq, class: "form-control", type: "time" %>
      </div>
      <div class="clear"></div>
      <%= f.submit t(".search_pitch"), class: "btn btn-warning" %>
    <% end %>
  </div>
</div>
